{
	"name": "選択文字をgoogle翻訳",
	"version": "0.1",
	"manifest_version": 2,

	"icons": {
		"128": "icon/icon.png"
	},

	"description": "選択文字をgoogle翻訳",

	"permissions": [
		"contextMenus",
		"clipboardRead"
	],

	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	},

	"browser_action": {
		"default_icon": "icon/icon.png",
		"default_title": "クリップボードの内容をGoogle翻訳"
	}
}
